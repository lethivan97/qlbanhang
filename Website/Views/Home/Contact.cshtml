@{
    ViewBag.Title = "Liên hệ";
}
<div class="container">
    <div class="row lienhe">
        <h4>LIÊN HỆ</h4>
        <hr />
        @if (Request.QueryString["messeageSuccess"] != null)
        {
            <div class="alert alert-success">
                <p>@Request.QueryString["messeageSuccess"]</p>
            </div>
        }
        else
        {
            if (Request.QueryString["messeageError"] != null)
            {
                <div class="alert alert-danger">
                    <p>@Request.QueryString["messeageSuccess"]</p>
                </div>
            }
        }
        <p>Vui lòng điền các thông tin sau:</p>
        <div class="col-md-6">
            <form action="@Url.Action("LienHe","Home")" method="post" role="form" class="form-horizontal">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="col-md-3">
                        <label class="control-label">Họ tên</label>
                    </div>
                    <div class="col-md-9">
                        <input type="text" name="txtName" id="txtName" class="form-control"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label class="control-label">Email</label>
                    </div>
                    <div class="col-md-9">
                        <input type="text" name="txtEmail" id="txtEmail" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label class="control-label">Điện thoại</label>
                    </div>
                    <div class="col-md-9">
                        <input type="number" name="txtPhone" id="txtPhone" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label class="control-label">Tiêu đề</label>
                    </div>
                    <div class="col-md-9">
                        <input type="text" name="txtTieude" id="txtTieude" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label class="control-label">Nội dung</label>
                    </div>
                    <div class="col-md-9">
                        <textarea rows="5" class="form-control" name="txtNoidung">

                        </textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12" style="text-align:right">
                        <button class="btn btn-primary" type="submit">Gửi</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3724.122860857584!2d105.80064111469063!3d21.02776948599886!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135ab424a50fff9%3A0xbe3a7f3670c0a45f!2zVHLGsOG7nW5nIMSQ4bqhaSBo4buNYyBHaWFvIHRow7RuZyBW4bqtbiB04bqjaQ!5e0!3m2!1svi!2s!4v1516292108986"  height="450" frameborder="0" style="border:0;width:100%" allowfullscreen></iframe>
            <p style="padding-top:20px">
                <strong>Cơ sở 1 : </strong>Trường Đại Học Giao Thông Vận Tải
            </p>
