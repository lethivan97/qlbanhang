                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-4 col-md-6">
                    <input type="submit" value="Lưu" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Về danh sách", "Index", null, new { @class = "btn btn-sm btn-success" })
    </div>
</body>
</html>
