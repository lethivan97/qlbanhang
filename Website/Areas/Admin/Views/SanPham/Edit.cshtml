@using Website.Models;
@model SanPham
@{
    ViewBag.Title = "Sửa sản phẩm" + Model.TenSanPham;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sửa</title>
    <style>
        input[type=number]::-webkit-inner-spin-button,
        input[type=number]::-webkit-outer-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }
        img{
            width:100%;
        }
    </style>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4 style="padding-top:20px">Sửa sản phẩm</h4>
                <hr />
                <div class="col-md-4">
                    <img src="~/Content/images/Photos/@Model.Hinh" alt="@Model.BiDanh" />
                </div>
                <div class="col-md-8">
                    @Html.HiddenFor(model => model.SanPhamID)
                    @Html.HiddenFor(model => model.Hinh)
                    <div class="form-group">
                        @Html.LabelFor(model => model.TenSanPham, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.TenSanPham, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenSanPham, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DonGia, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.GiaKM, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.GiaKM, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.GiaKM, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.NhomspID, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            <select name="NhomspID" class="form-control">
                                @foreach (var itemPhanLoai in ViewBag.listType as IEnumerable<PhanLoai>)
                                {
                                    <optgroup label="@itemPhanLoai.TenPhanLoai">
                                        @foreach (var itemNhomSP in itemPhanLoai.Nhomsps)
                                        {
                                            <option value="@itemNhomSP.NhomspID"> @itemNhomSP.TenNhomsp </option>
                                        }
                                    </optgroup>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.NgayCapNhat, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.NgayCapNhat, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NgayCapNhat, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.NgungBan, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            @Html.CheckBoxFor(m => m.NgungBan)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.BiDanh, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.BiDanh, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.BiDanh, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-6">
                            <input type="submit" value="Lưu" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@

            </div>
        }
    <div class="col-md-12">
        @Html.ActionLink("Về danh sách", "Index",null, new { @class = "btn btn-sm btn-success" })
    </div>
</body>
</html>
