@model Website.Models.Nhomsp

@{
    ViewBag.Title = "Tạo thêm nhóm sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thêm mới</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    
    
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4 style="padding-top:20px">Nhóm sản phẩm</h4>
            <hr />
            @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
            <div class="form-group">
                @Html.LabelFor(model=>model.TenNhomsp, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.TenNhomsp, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenNhomsp, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
               @Html.LabelFor(model => model.PhanLoaiID, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-6">
                    @Html.DropDownList("PhanLoaiID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PhanLoaiID, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
               @Html.LabelFor(model => model.BiDanh, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.BiDanh, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BiDanh, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-4 col-md-6">
                    <input type="submit" value="Thêm" class="btn btn-default btn-sm" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Về danh sách", "Index", null, new { @class = "btn btn-sm btn-success" })
    </div>
</body>
</html>
